{
  "name": "vba",
  "displayName": "VSCode VBA",
  "description": "VBA language syntax highlighting support and code snippets for VSCode",
  "version": "1.7.1",
  "icon": "images/logo.png",
  "publisher": "spences10",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/spences10/vscode-vba.git"
  },
  "activationEvents": [
    "onLanguage:vba"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vba",
        "aliases": [
          "VBA",
          "vba"
        ],
        "extensions": [
          ".bas",
          ".cls",
          ".frm",
          ".sht",
          ".wbk"
        ],
        "configuration": "./vba.configuration.json"
      }
    ],
    "main": "src/extension",
    "grammars": [
      {
        "language": "vba",
        "scopeName": "source.vba",
        "path": "./syntaxes/vba.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
